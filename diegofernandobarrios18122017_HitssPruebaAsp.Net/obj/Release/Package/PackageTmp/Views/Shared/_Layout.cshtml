<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | IE San José</title>
    <link rel="stylesheet" href="~/Content/css/styles.css" />
    <link rel="shortcut icon" href="~/Content/img/school.png"/>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Institución Educativa Sán José", "Index", "Docentes", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Docentes", "Index", "Teachers")</li>
                    <li>@Html.ActionLink("Estudiantes", "Index", "Students")</li>
                    <li>@Html.ActionLink("Materias", "Index", "Matters")</li>
                    <li>@Html.ActionLink("Matriculas", "Index", "MatterStudents")</li>
                    <li>@Html.ActionLink("Reportes", "Index", "Reports")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content container-body">
        <h2>@ViewBag.Module</h2>
        <h5>@ViewBag.Message</h5>
        <hr />
        <div class="spacer"></div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Desarrollado por: Diego Fdo. Barrios Olmos</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>